[core]
  autocrlf     = input
  whitespace   = fix,space-before-tab,tab-in-indent,trailing-space
  excludesfile = ~/.gitignore_global
  # editor       = mvim -f
[apply]
  whitespace   = fix
[color]
  diff         = auto
  status       = auto
  branch       = auto
  ui           = auto
  interactive  = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st           = status -bs
  ci           = commit
  co           = checkout
  br           = branch
  lol          = log --oneline --graph --decorate
  g            = grep --break --heading --line-number
  root         = rev-parse --show-toplevel
  cdroot       = !cd $(git root)
  taglist      = show-ref --tags --abbrev

  lol          = log --oneline --graph --decorate
  ls = log --pretty=\"%C(red)%<(10,trunc)%cr%C(green) %<(8,trunc)%h %C(reset)%<(12,trunc)%an%C(yellow)%<(60,trunc)% s%C(blue)% ai%C(reset)%C(dim)%+d%C(reset)\" --abbrev-commit --decorate=short


[fetch]
  recurseSubmodules = true
  prune        = true
[push]
  default = simple
[merge]
  log = true
[submodule]
  fetchjobs    = 8
[log]
  abbrevCommit = true
[push]
  default      = current
[rerere]
  enable       = true
[remote "origin"]
  prune        = true

[credential]
  helper       = store --file=~/.git-credentials
